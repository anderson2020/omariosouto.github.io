			.date
				background-color: category-color
				color: #FFFFFF
		&:after
			background: category-color
		.card-body
			> .label
				color category-color
			> .title
				color: category-color
			> .tags
				a
					border: 1px solid category-color
					color: category-color

		.header-page
			//background-color: #FFFFFF
			//.post-title,
			//.subtitle,
			.date
				color: category-color
			.date
				background-color: category-color
				color: #FFFFFF

		article
			> h1, > h2, > h3, > h4
				color: category-color
			ul
				li
					&:before
