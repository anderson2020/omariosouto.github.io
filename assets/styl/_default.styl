.card-list
	display: flex
	flex-flow: row wrap
	max-width: rem(1080px)
	width: 100%
	margin: 0 auto
	margin-top: rem(50px)

.card-item
	position relative
	flex: 1 0 240px
	flex-flow: row wrap
	background: #FFF
	width: 100%
	min-height: rem(290px)
	margin: 0 .938rem 3.125rem
	padding: rem(15px)
	box-shadow: 1px 1px 5px rgba(#666,0.2)
	display: flex
	@extend .standard-transition
	&:hover
		box-shadow: 1px 1px 5px rgba(#666,0.3)
	&:after
		content: ""
		width: 100%
		height: rem(5px)
		background: #3498db
		position: absolute
		bottom: 0
		left: 0
		right: 0
		margin: auto
	.card-body
		display: flex
		flex-direction: column
		width: 100%
		> .label
			font-family: 'Lato', sans-serif
			color: #FFFFFF
			background-color #3498db
			display: inline-block
			position absolute
			top: 0
			left: 0
			padding: rem(9px) 0 rem(15px) rem(15px)
			min-width: 25%
			text-transform: uppercase
		> .title
			font-family: 'Lato', sans-serif
			font-size: 1.25rem
			color: #3498db
			margin-bottom: rem(15px)
		> .tags
			a
				display: inline-block
				border: 1px solid #3498db
				color: #3498db
				padding: rem(4px)
		> .date
			font-size: rem(11px)
			color: #9c9c9c
			text-align: right
			display: block
			margin-bottom: rem(25px)
		> .description
			font-size: .875rem
			line-height: 1.375rem
			color: #465151
			margin-bottom: rem(10px)
			flex: 1
