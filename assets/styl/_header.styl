.header-blog
	width 100%
	padding rem(10px 18px) //.625rem 1.25rem
	background #28282b
	border-bottom 5px solid $detail-color;
	position: fixed
	top: 0
	left: 0
	right: 0
	z-index: 100
	transition: .5s ease-in-out;
	//background-image: linear-gradient(180deg,rgba(0,0,0,0.5) -20px,transparent 128%)
	box-shadow: 1px 1px 20px rgba(0,0,0,0.2)
	display: flex
	justify-content: space-between
	align-items: center
	flex-direction: row
	+below(700px)
		align-items: flex-start
		justify-content: flex-start
		flex-direction: column
	& > .logo
		font-family 'Lato', sans-serif
		margin 0
		color #FFFFFF
		a
			color: inherit
			&:before
				content: "{Mario Souto}"
				font-family: inherit
				+below(700px)
					content: "{MS}"
			&hover,
			&focus
				text-decoration none
	.menu-list
		li
			color: #FFF
		a
			color: inherit
