@keyframes glitch-anim
	0%
    	clip: rect(0px, 450px, 76px, 0)
	20%
		clip: rect(0px, 450px, 16px, 0)
	40%
		clip: rect(0px, 450px, 3px, 0)
	60%
		clip: rect(0px, 450px, 78px, 0)
	80%
		clip: rect(0px, 450px, 13px, 0)
	100%
		clip: rect(0px, 450px, 5px, 0)

@keyframes glitch-anim-2
	0%
		clip: rect(0px, 450px, 5px, 0)
	20%
		clip: rect(0px, 450px, 16px, 0)
	100%
		clip: rect(0px, 450px, 105px, 0)

.glitch-title-fail
	position relative
	&:before
		animation: glitch-anim-2 1s infinite linear
		left: -2px
		text-shadow: 2px 0 blue
		//background-color: #F00 !important
		//clip: rect(44px, 450px, 56px, 0)
	&:after
		left: 2px
		text-shadow: -1px 0 red
		animation: glitch-anim-2 .5s infinite linear alternate-reverse
		//background-color: #00F !important
		//clip: rect(15px, 450px, 13px, 0)

	&:before,
	&:after
		content: attr(data-text)
		position: absolute
		top: 0
		left: 0
		width: 100%
		height: 100%
		clip: rect(0, 0, 0, 0)

